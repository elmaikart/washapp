{
  "compilerOptions": {
    /* === Salida y Módulos === */
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,

    /* === JSX / React === */
    "jsx": "preserve",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* === Revisión de Tipos === */
    "strict": true,
    "skipLibCheck": true,

    /* === Alias y Rutas === */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/app/*": ["src/app/*"],
      "@/styles/*": ["src/styles/*"],
      "@/utils/*": ["src/utils/*"]
    },

    /* === Plugins Next.js === */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  /* === Archivos incluidos === */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],

  /* === Exclusiones === */
  "exclude": [
    "node_modules",
    "dist",
    "src/utils/db.ts"   // ✅ agregamos esto
  ]
}
